		size: root.width, root.height
		cols: 1
		Label:
			text: "Tic Tac Toe"
			font_size: 70
			color: (0, 1, 1, 1)
		GridLayout:
			cols: 3
			Button:
				id: b1
				on_press: root.btn(b1)
			Button:
				id: b2
				on_press: root.btn(b2)
			Button:
				id: b3
				on_press: root.btn(b3)
		GridLayout:
			cols: 3
			Button:
				id: b4
				on_press: root.btn(b4)
			Button:
				id: b5
				on_press: root.btn(b5)
			Button:
				id: b6
				on_press: root.btn(b6)
		GridLayout:
			cols: 3
			Button:
				id: b7
				on_press: root.btn(b7)
			Button:
				id: b8
				on_press: root.btn(b8)
			Button:
				id: b9
				on_press: root.btn(b9)
