<Button>
	text: "0"
	font_size: 40
	background_color: (0, 0.8, 0.8, 1)
	color: (0, 1, 1, 1)	

<TicTacToe>
	b1:b1
	b2:b2
	b3:b3
	b4:b4
	b5:b5
	b6:b6
	b7:b7
	b8:b8
	b9:b9
